<idea-plugin>
    <id>org.example.CustomWordTranslator</id>
    <name>CustomWordTranslator</name>
    <version>0.1</version>
    <vendor email="hodolee@matey.co.kr" url="https://github.com/hodolee246/CustomWordTranslator">hodolee246</vendor>

    <description><![CDATA[
    <h1>CustomWordTranslator</h1>
    <b>
        This plugin is a plugin that use properties values to convert custom words or simple words into korean word used in real project
        <a href="https://github.com/hodolee246/CustomWordTranslator">GitHub</a>
    </b>
    <ul>
        <li>Translate Dialog : ctrl+1</li>
        <li>Translate Modal : ctrl+2</li>
    </ul>
    <br>
    <b>
        This plugin is For an "Matey" Company
    </b>
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>0.1 : Project Init</li>
    </ul>
    ]]></change-notes>


    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>

    <!-- Add your extensions here -->
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="action.impl.MessageDialogAction" class="action.impl.MessageDialogAction"
                text="action.impl.MessageDialogAction" description="translator dialog">
            <keyboard-shortcut first-keystroke="control 1" keymap="$default"/>
        </action>

        <action id="action.impl.TranslateDialogAction" class="action.impl.TranslateDialogAction"
                text="action.impl.TranslateDialogAction" description="translator modal">
            <keyboard-shortcut first-keystroke="control 2" keymap="$default"/>
        </action>
    </actions>
    <idea-version since-build="211.*"></idea-version>
</idea-plugin>